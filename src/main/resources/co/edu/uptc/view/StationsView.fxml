<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx"
      fx:controller="co.edu.uptc.viewController.StationsController"
      spacing="16" style="-fx-padding: 16; -fx-background-color: transparent;">

    <!-- Toolbar -->
    <HBox styleClass="toolbar-section" spacing="12" alignment="CENTER_LEFT">
        <Label text="%stations.title" styleClass="label,section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" promptText="%prompt.search.station" prefWidth="250"/>
        <Button text="%button.search" onAction="#onSearch" styleClass="button,ghost"/>
        <Separator orientation="VERTICAL"/>
        <Button text="%button.new" onAction="#onNewStation" styleClass="button,primary"/>
        <Button text="%button.delete" onAction="#onDeleteStation" styleClass="button,danger"/>
    </HBox>

    <!-- Content Area -->
    <SplitPane orientation="HORIZONTAL" VBox.vgrow="ALWAYS" dividerPositions="0.6">

        <!-- Left: Table -->
        <AnchorPane>
            <TableView fx:id="stationsTable" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                <columns>
                    <TableColumn fx:id="colId" text="%col.id" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="%col.name" prefWidth="220"/>
                    <TableColumn fx:id="colLat" text="%col.latitude" prefWidth="130"/>
                    <TableColumn fx:id="colLng" text="%col.longitude" prefWidth="130"/>
                </columns>
            </TableView>
        </AnchorPane>

        <!-- Right: Form -->
        <AnchorPane>
            <VBox styleClass="form-container" spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="8" 
                  AnchorPane.rightAnchor="8" AnchorPane.bottomAnchor="0">

                <Label text="%label.station.details" styleClass="label,section-title"/>
                <Separator/>

                <GridPane hgap="12" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints minWidth="80" prefWidth="80"/>
                        <ColumnConstraints prefWidth="220" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="%prompt.station.id" GridPane.rowIndex="0" GridPane.columnIndex="0" 
                           style="-fx-font-weight: 600;"/>
                    <TextField fx:id="idField" promptText="%prompt.station.idExample" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="%prompt.station.name" GridPane.rowIndex="1" GridPane.columnIndex="0" 
                           style="-fx-font-weight: 600;"/>
                    <TextField fx:id="nameField" promptText="%prompt.station.nameExample" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="%col.latitude" GridPane.rowIndex="2" GridPane.columnIndex="0" 
                           style="-fx-font-weight: 600;"/>
                    <TextField fx:id="latField" promptText="%prompt.station.latExample" 
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="%col.longitude" GridPane.rowIndex="3" GridPane.columnIndex="0" 
                           style="-fx-font-weight: 600;"/>
                    <TextField fx:id="lngField" promptText="%prompt.station.lngExample" 
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <Separator/>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="%button.save" onAction="#onSaveStation" styleClass="button,primary" 
                            prefWidth="140"/>
                    <Button text="%button.cancel" onAction="#onCancelEdit" styleClass="button,ghost" 
                            prefWidth="140"/>
                </HBox>

                <Region VBox.vgrow="ALWAYS"/>

                <!-- Info Box -->
                <VBox spacing="8" style="-fx-background-color: rgba(37, 99, 235, 0.05); -fx-padding: 16; -fx-background-radius: 8;">
                    <Label text="%label.information" style="-fx-font-weight: 700; -fx-text-fill: -primary;"/>
                    <Label text="%stations.info1" wrapText="true" style="-fx-font-size: 12px;"/>
                    <Label text="%stations.info2" wrapText="true" style="-fx-font-size: 12px;"/>
                    <Label text="%stations.info3" wrapText="true" style="-fx-font-size: 12px;"/>
                </VBox>
            </VBox>
        </AnchorPane>
    </SplitPane>
</VBox>
