<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            fitToWidth="true"
            style="-fx-background-color: transparent;">
    
    <VBox spacing="24" style="-fx-padding: 24;">
        
        <!-- Header -->
        <VBox spacing="8">
            <Label text="%dashboard.title" styleClass="label,title"/>
            <Label text="%label.welcome" styleClass="label,caption"/>
        </VBox>
        
        <!-- Stats Cards -->
        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
                <ColumnConstraints percentWidth="25" minWidth="200"/>
            </columnConstraints>
            
            <!-- Card 1: Estaciones -->
            <VBox styleClass="stat-card,card-primary" spacing="12" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="ðŸ“" styleClass="stat-icon" style="-fx-text-fill: white;"/>
                    <VBox spacing="4">
                        <Label text="0" styleClass="stat-number" style="-fx-text-fill: white;" fx:id="lblStationCount"/>
                        <Label text="%tab.stations" styleClass="stat-label" style="-fx-text-fill: rgba(255,255,255,0.8);"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Card 2: Conexiones -->
            <VBox styleClass="stat-card,card-secondary" spacing="12" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="ðŸ”—" styleClass="stat-icon" style="-fx-text-fill: white;"/>
                    <VBox spacing="4">
                        <Label text="0" styleClass="stat-number" style="-fx-text-fill: white;" fx:id="lblConnectionCount"/>
                        <Label text="%tab.connections" styleClass="stat-label" style="-fx-text-fill: rgba(255,255,255,0.8);"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Card 3: Distancia Total -->
            <VBox styleClass="stat-card,card-warning" spacing="12" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="ðŸ“" styleClass="stat-icon" style="-fx-text-fill: white;"/>
                    <VBox spacing="4">
                        <Label text="0 km" styleClass="stat-number" style="-fx-text-fill: white; -fx-font-size: 28px;" fx:id="lblTotalDistance"/>
                        <Label text="%label.distance" styleClass="stat-label" style="-fx-text-fill: rgba(255,255,255,0.8);"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Card 4: Rutas Disponibles -->
            <VBox styleClass="stat-card,card-info" spacing="12" GridPane.columnIndex="3" GridPane.rowIndex="0">
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="ðŸ—ºï¸" styleClass="stat-icon" style="-fx-text-fill: white;"/>
                    <VBox spacing="4">
                        <Label text="âˆž" styleClass="stat-number" style="-fx-text-fill: white;" fx:id="lblRouteCount"/>
                        <Label text="%tab.routes" styleClass="stat-label" style="-fx-text-fill: rgba(255,255,255,0.8);"/>
                    </VBox>
                </HBox>
            </VBox>
        </GridPane>
        
        <!-- Quick Actions -->
        <VBox styleClass="card" spacing="16">
            <Label text="%quickActions.title" styleClass="label,section-title"/>
            
            <GridPane hgap="12" vgap="12">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>
                
                <Button text="%quickActions.addStation" styleClass="button,primary" 
                        maxWidth="Infinity" prefHeight="50" GridPane.columnIndex="0"/>
                <Button text="%quickActions.addConnection" styleClass="button,secondary" 
                        maxWidth="Infinity" prefHeight="50" GridPane.columnIndex="1"/>
                <Button text="%button.calculate.route" styleClass="button,ghost" 
                        maxWidth="Infinity" prefHeight="50" GridPane.columnIndex="2"/>
            </GridPane>
        </VBox>
        
        <!-- Information Cards -->
        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            
            <!-- Recent Activity -->
            <VBox styleClass="card" spacing="12" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="%info.recentActivity" styleClass="label,section-title"/>
                <Separator/>
                <VBox spacing="8">
                    <Label text="%info.activity1" style="-fx-text-fill: -gray-600;"/>
                    <Label text="%info.activity2" style="-fx-text-fill: -gray-600;"/>
                    <Label text="%info.activity3" style="-fx-text-fill: -gray-600;"/>
                </VBox>
            </VBox>
            
            <!-- System Info -->
            <VBox styleClass="card" spacing="12" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="%info.systemInfo" styleClass="label,section-title"/>
                <Separator/>
                <VBox spacing="8">
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="%info.status" style="-fx-font-weight: 600;"/>
                        <Label text="â—" style="-fx-text-fill: #10b981; -fx-font-size: 16px;"/>
                        <Label text="%info.operational" style="-fx-text-fill: #10b981; -fx-font-weight: 600;"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="%info.version" style="-fx-font-weight: 600;"/>
                        <Label text="1.0.0"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="%info.routeEngine" style="-fx-font-weight: 600;"/>
                        <Label text="Dijkstra + BFS"/>
                    </HBox>
                </VBox>
            </VBox>
        </GridPane>
        
        <!-- Features -->
        <VBox styleClass="card" spacing="16">
            <Label text="%features.title" styleClass="label,section-title"/>
            <Separator/>
            
            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                
                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="%features.advancedAlgorithmsTitle" style="-fx-font-weight: 700; -fx-font-size: 14px;"/>
                    <Label text="%features.advancedAlgorithmsDesc" wrapText="true" style="-fx-text-fill: -gray-600;"/>
                </VBox>
                
                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="%features.mapVisualizationTitle" style="-fx-font-weight: 700; -fx-font-size: 14px;"/>
                    <Label text="%features.mapVisualizationDesc" wrapText="true" style="-fx-text-fill: -gray-600;"/>
                </VBox>
                
                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="%features.dataPersistenceTitle" style="-fx-font-weight: 700; -fx-font-size: 14px;"/>
                    <Label text="%features.dataPersistenceDesc" wrapText="true" style="-fx-text-fill: -gray-600;"/>
                </VBox>
                
                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="%features.multiLanguageTitle" style="-fx-font-weight: 700; -fx-font-size: 14px;"/>
                    <Label text="%features.multiLanguageDesc" wrapText="true" style="-fx-text-fill: -gray-600;"/>
                </VBox>
            </GridPane>
        </VBox>
    </VBox>
</ScrollPane>
