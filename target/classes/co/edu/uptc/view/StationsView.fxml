<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<SplitPane xmlns:fx="http://javafx.com/fxml"
               fx:controller="co.edu.uptc.viewController.StationsController"
               orientation="HORIZONTAL">
     <!-- Tabla (izquierda) -->
     <AnchorPane>
          <VBox spacing="8" AnchorPane.topAnchor="8" AnchorPane.leftAnchor="8" AnchorPane.rightAnchor="8" AnchorPane.bottomAnchor="8">
               <HBox spacing="8">
                    <TextField fx:id="searchField" promptText="%prompt.search.station" HBox.hgrow="ALWAYS"/>
                    <Button text="%button.search" onAction="#onSearch"/>
                    <Button text="%button.new" onAction="#onNewStation" styleClass="button primary"/>
               </HBox>

               <TableView fx:id="stationsTable" prefHeight="480">
                    <columns>
                         <TableColumn fx:id="colId" text="ID" prefWidth="90"/>
                         <TableColumn fx:id="colName" text="%col.name" prefWidth="180"/>
                         <TableColumn fx:id="colLat" text="%col.latitude" prefWidth="120"/>
                         <TableColumn fx:id="colLng" text="%col.longitude" prefWidth="120"/>
                    </columns>
               </TableView>

               <HBox spacing="8" alignment="CENTER_RIGHT">
                    <Button text="%button.delete" onAction="#onDeleteStation" styleClass="button ghost"/>
               </HBox>
          </VBox>
     </AnchorPane>

     <!-- Formulario (derecha) -->
     <AnchorPane>
          <VBox spacing="8" AnchorPane.topAnchor="8" AnchorPane.leftAnchor="8">
               <Label text="%label.station.details" styleClass="label title"/>
               <GridPane hgap="8" vgap="8">
                    <Label text="%col.id" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="%col.name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="%col.latitude" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="latField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="%col.longitude" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="lngField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
               </GridPane>

               <HBox spacing="8">
                    <Button text="%button.save" onAction="#onSaveStation" styleClass="button primary"/>
                    <Button text="%button.cancel" onAction="#onCancelEdit"/>
               </HBox>
          </VBox>
     </AnchorPane>
</SplitPane>