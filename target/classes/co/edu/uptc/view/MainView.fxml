<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uptc.viewController.MainController">

    <top>
        <ToolBar>
            <Button fx:id="btnLoadXml" onAction="#onLoadGraph" text="%button.load.xml"/>
            <Button fx:id="btnSaveXml" onAction="#onSaveGraph" text="%button.save.xml"/>
            <Button fx:id="btnShowNodes" onAction="#onShowNodes" text="%button.show.nodes"/>
            
            <!-- ComboBox para elegir idioma -->
            <Label fx:id="lblLanguage" text="%label.language"/>
            <ComboBox fx:id="cmbLanguage" onAction="#onLanguageSelected" prefWidth="120"/>
        </ToolBar>
    </top>

    <center>
        <TextArea fx:id="outputArea" editable="false" wrapText="true"/>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 5;">

            <!-- Agregar nueva estación -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="lblAddStation" text="%label.add.station"/>
                <TextField fx:id="stationIdField" promptText="%prompt.station.id"/>
                <TextField fx:id="stationNameField" promptText="%prompt.station.name"/>
                <Button fx:id="btnAddStation" onAction="#onAddStation" text="%button.add.station"/>
            </HBox>

            <!-- Agregar nueva conexión -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="lblAddConnection" text="%label.add.connection"/>
                <TextField fx:id="connFromField" promptText="%prompt.connection.from"/>
                <TextField fx:id="connToField" promptText="%prompt.connection.to"/>
                <TextField fx:id="connDistanceField" promptText="%prompt.connection.distance"/>
                <Button fx:id="btnAddConnection" onAction="#onAddConnection" text="%button.add.connection"/>
            </HBox>

            <!-- Calcular ruta -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="lblRoute" text="%label.route"/>
                <TextField fx:id="fromField" promptText="%prompt.route.from"/>
                <Label fx:id="lblto" text="%label.to"/>
                <TextField fx:id="toField" promptText="%prompt.route.to"/>
                <Button fx:id="calculateRoute" onAction="#onCalculateRoute" text="%button.calculate.route"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
