<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uptc.viewController.MainController">

    <top>
        <ToolBar>
            <Button text="Cargar XML" onAction="#onLoadGraph"/>
            <Button text="Guardar XML" onAction="#onSaveGraph"/>
            <Button text="Mostrar Nodos" onAction="#onShowNodes"/>
        </ToolBar>
    </top>

    <center>
        <TextArea fx:id="outputArea" editable="false" wrapText="true"/>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 5;">

            <!-- Agregar nueva estaci贸n -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Agregar estaci贸n:"/>
                <TextField fx:id="stationIdField" promptText="ID"/>
                <TextField fx:id="stationNameField" promptText="Nombre"/>
                <Button text="Agregar" onAction="#onAddStation"/>
            </HBox>

            <!-- Agregar nueva conexi贸n -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Agregar conexi贸n:"/>
                <TextField fx:id="connFromField" promptText="Desde ID"/>
                <TextField fx:id="connToField" promptText="Hasta ID"/>
                <TextField fx:id="connDistanceField" promptText="Distancia"/>
                <Button text="Agregar" onAction="#onAddConnection"/>
            </HBox>

            <!-- Calcular ruta -->
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Ruta de:"/>
                <TextField fx:id="fromField" promptText="ID origen"/>
                <Label text="a:"/>
                <TextField fx:id="toField" promptText="ID destino"/>
                <Button text="Calcular Ruta" onAction="#onCalculateRoute"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
