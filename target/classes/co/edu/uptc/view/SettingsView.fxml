<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21"
      fx:controller="co.edu.uptc.viewController.SettingsController" 
      spacing="10" style="-fx-padding: 10;">
     
     <Label text="%label.settings" styleClass="label,title"/>
     
     <HBox spacing="8" alignment="CENTER_LEFT">
          <Label text="%label.default.speed"/>
          <TextField fx:id="speedField" prefWidth="120"/>
          <Label text="km/h"/>
          <Button text="%button.save" onAction="#onSaveSettings" styleClass="button,primary"/>
     </HBox>
</VBox>